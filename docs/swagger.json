{
    "swagger": "2.0",
    "info": {
        "version": "0.0.1",
        "title": "Score Keeper",
        "description": "A Simple API that computes and stores events for sports.",
        "license": {
            "name": "The MIT License (MIT)",
            "url": "https://github.com/seonggbang/score-keeper/blob/master/LICENSE"
        }
    },
    "host": "davids-score-keeper.herokuapp.com",
    "schemes": [
        "https"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/scores": {
            "get": {
                "summary": "Game Scores",
                "description": "Returns scores from completed games",
                "parameters": [
                    {
                        "name": "teamName",
                        "in": "query",
                        "type": "string",
                        "required": false
                    },
                    {
                        "name": "teamId",
                        "in": "query",
                        "type": "string",
                        "required": false
                    },
                    {
                        "name": "start",
                        "in": "query",
                        "required": false,
                        "type": "string",
                        "format": "date-time"
                    },
                    {
                        "name": "end",
                        "in": "query",
                        "required": false,
                        "type": "string",
                        "format": "date-time"
                    },
                    {
                        "name": "numScores",
                        "in": "query",
                        "required": false,
                        "type": "integer",
                        "format": "int32"
                    },
                    {
                        "name": "sport",
                        "in": "query",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Return object with score",
                        "headers": {
                            "numScores": {
                                "description": "Number of Scores Returned",
                                "type": "integer"
                            }
                        },
                        "schema": {
                            "type": "array",
                            "items": {
                                "required": [
                                    "home",
                                    "away",
                                    "score",
                                    "date"
                                ],
                                "properties": {
                                    "home": {
                                        "type": "string"
                                    },
                                    "away": {
                                        "type": "string"
                                    },
                                    "location": {
                                        "type": "string"
                                    },
                                    "score": {
                                        "type": "string"
                                    },
                                    "date": {
                                        "type": "string",
                                        "format": "date-time"
                                    },
                                    "sport": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "examples": {
                            "application/json": {
                                "home": "New England Revolution",
                                "away": "Chicago Fire",
                                "location": "Gillette Stadium",
                                "score": "1-3",
                                "date": "2012-04-23T00:00:00.000Z",
                                "sport": "soccer"
                            }
                        }
                    }
                }
            }
        },
        "/currentScores": {
            "get": {
                "summary": "Currently Running Game Scores",
                "description": "Returns scores from all currently running games",
                "parameters": [
                    {
                        "name": "teamName",
                        "in": "query",
                        "type": "string",
                        "required": false
                    },
                    {
                        "name": "teamId",
                        "in": "query",
                        "type": "string",
                        "required": false
                    },
                    {
                        "name": "numScores",
                        "in": "query",
                        "type": "integer",
                        "format": "int32",
                        "required": false
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Return object with score",
                        "schema": {
                            "type": "array",
                            "items": {
                                "required": [
                                    "home",
                                    "away",
                                    "score"
                                ],
                                "properties": {
                                    "home": {
                                        "type": "string"
                                    },
                                    "away": {
                                        "type": "string"
                                    },
                                    "location": {
                                        "type": "string"
                                    },
                                    "score": {
                                        "type": "string"
                                    },
                                    "sport": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "headers": {
                            "numScores": {
                                "description": "Number of Scores Returned",
                                "type": "integer"
                            }
                        },
                        "examples": {
                            "application/json": [
                                {
                                    "home": "New England Revolution",
                                    "location": "Gillette Stadium",
                                    "away": "Chicago Fire",
                                    "score": "1-3",
                                    "sport": "soccer"
                                }
                            ]
                        }
                    }
                }
            }
        }
    }
}